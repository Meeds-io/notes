<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

  <portlet>
    <portlet-name>Notes</portlet-name>
    <display-name xml:lang="EN">Notes Application</display-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/html/notes.html</value>
    </init-param>
    <init-param>
      <name>preload.resource.bundles</name>
      <value>locale.portlet.notes.notesPortlet,locale.portlet.wiki.WikiPortlet</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>
    <cache-scope>PUBLIC</cache-scope>
    <supports>
    <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.notes.notesPortlet</resource-bundle>
    <portlet-info>
      <title>Notes Application</title>
      <keywords>Notes Application</keywords>
    </portlet-info>
   </portlet>

   <portlet>
    <portlet-name>NotesEditor</portlet-name>
    <display-name xml:lang="EN">Notes Editor Application</display-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
    <name>portlet-view-dispatched-file-path</name>
    <value>/html/notesEditor.html</value>
    </init-param>
    <init-param>
      <name>preload.resource.bundles</name>
      <value>locale.portlet.notes.notesPortlet,locale.portlet.wiki.WikiPortlet</value>
    </init-param>
    <expiration-cache>-1</expiration-cache>
    <cache-scope>PUBLIC</cache-scope>
    <supports>
    <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.notes.notesPortlet</resource-bundle>
    <portlet-info>
      <title>Notes Editor Application</title>
      <keywords>Notes Editor Application</keywords>
    </portlet-info>
  </portlet>

   <portlet>
    <portlet-name>NotePageView</portlet-name>
    <display-name xml:lang="EN">Single Note View</display-name>
    <portlet-class>io.meeds.social.portlet.CMSPortlet</portlet-class>
    <init-param>
      <name>content-type</name>
      <value>notePage</value>
    </init-param>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/WEB-INF/jsp/notePageView.jsp</value>
    </init-param>
    <supports>
    <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.NotePageView</resource-bundle>
    <portlet-info>
      <title>Single Note View</title>
      <keywords>Single Note View</keywords>
    </portlet-info>
  </portlet>

</portlet-app>